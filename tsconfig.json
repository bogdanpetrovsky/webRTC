{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "types": [ "node", "./src/typings/global"]
  },

  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules", "**/*.spec.ts"
  ]
}
